<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="product" namespace="/product" extends="json-default">


		<action name="add" class="productAction" method="addProduct">
			<result name="success" type="json"></result>
		</action>

		<action name="delete" class="productAction" method="deleteProduct">
			<result name="success" type="json"></result>
		</action>
		<action name="upload" class="uploadImageAction">
			<result name="success" type="json"></result>
		</action>
	</package>
</struts>